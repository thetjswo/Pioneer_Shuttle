<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:orientation="vertical" android:layout_width="match_parent"    android:layout_height="match_parent">    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="horizontal"        android:layout_marginTop="10dp"        android:layout_marginBottom="10dp">        <TextView            android:id="@+id/title"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="송담대 셔틀버스"            android:textSize="30dp"            android:layout_centerVertical="true"            android:layout_marginLeft="4dp"/>        <Button            android:id="@+id/inform"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_centerVertical="true"            android:layout_toLeftOf="@+id/schedule"            android:layout_alignBaseline="@+id/schedule"            android:layout_margin="3dp"            android:text="rpt"/>        <!-- 알림설정 버튼 id는 inform(알리다)로 설정         마진 값은 초기 틀을 잡기 위한 임의 설정         위치는 시간표 기준 왼쪽 중앙으로 설정(시간표를 부모레이아웃의 맨 오른쪽으로 지정했기 때문.-->        <Button            android:id="@+id/schedule"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_centerVertical="true"            android:layout_alignParentRight="true"            android:layout_centerHorizontal="true"            android:layout_margin="3dp"            android:text="scl"/>        <!-- 시간표 버튼 id는 schedule로 설정, 다른 사항은 위와 같음 -->    </RelativeLayout>    <!--마진 값은 위,아래,오른,왼쪽 각각 조절-->    <View        android:layout_width="wrap_content"        android:layout_height="0.3dp"        android:background="#4682B4"/>    <!--밑줄치기-->    <LinearLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_weight="2.5"        android:layout_marginTop="10dp"        android:orientation="vertical">        <TextView            android:id="@+id/situation"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:gravity="center"            android:text="운행 중 or 운행시간이 아닙니다."            android:textSize="25dp"            android:layout_margin="10dp"/>        <LinearLayout            android:layout_width="match_parent"            android:layout_height="match_parent"            android:orientation="horizontal"            android:gravity="center"            android:layout_weight="1">            <Button                android:id="@+id/map"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="map"                android:layout_margin="5dp"/>            <Button                android:id="@+id/refresh"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="rfs"                android:layout_margin="5dp"/>        </LinearLayout>    </LinearLayout>    <!--레이아웃 비율 1/4, 다른건 코드보면 해석 가능할 듯-->    <View        android:layout_width="wrap_content"        android:layout_height="0.3dp"        android:background="#4682B4"/>    <!--밑줄치기-->    <LinearLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_weight="1"        android:orientation="horizontal"        android:layout_marginTop="15dp"        android:layout_marginBottom="15dp">        <TableLayout            android:layout_width="match_parent"            android:layout_height="match_parent"            android:stretchColumns="*">            <TableRow                android:layout_marginTop="10dp"                android:layout_marginBottom="10dp">                <ImageView                    android:layout_span="2"/>                <TextView                    android:layout_span="8"                    android:gravity="center"                    android:text="정류장"                    android:textSize="25dp"                    android:textStyle="bold"                    android:textColor="#000000"/>                <TextView                    android:layout_span="1"                    android:gravity="center"                    android:text="시간표"                    android:textSize="25dp"                    android:textStyle="bold"                    android:textColor="#000000"/>                <TextView                    android:layout_span="1"                    android:gravity="center"                    android:text="실출발"                    android:textColor="#000000"                    android:textSize="25dp"                    android:textStyle="bold" />            </TableRow>            <TableRow                android:layout_weight="1">                <ImageView                    android:layout_span="2"/>                <TextView                    android:layout_span="8"                    android:text="용인송담대학교"                    android:textSize="23dp" />                <TextView                    android:layout_span="1"                    android:gravity="center"                    android:text="8:30"                    android:textSize="23dp" />                <TextView                    android:layout_span="1"                    android:gravity="center"                    android:text="8:30"                    android:textSize="23dp" />            </TableRow>            <TableRow                android:layout_weight="1">                <ImageView                    android:layout_span="2"/>                <TextView                    android:layout_span="8"                    android:text="용인버스터미널"                    android:textSize="23dp" />                <TextView                    android:layout_span="1"                    android:gravity="center"                    android:text="8:34"                    android:textSize="23dp" />                <TextView                    android:layout_span="1"                    android:gravity="center"                    android:text="--:--"                    android:textSize="23dp" />            </TableRow>            <TableRow                android:layout_weight="1">                <ImageView                    android:layout_span="2"/>                <TextView                    android:layout_span="8"                    android:text="운동장/송담대역"                    android:textSize="23dp" />                <TextView                    android:layout_span="1"                    android:gravity="center"                    android:text="8:38"                    android:textSize="23dp" />                <TextView                    android:layout_span="1"                    android:gravity="center"                    android:text="--:--"                    android:textSize="23dp" />            </TableRow>            <TableRow                android:layout_weight="1">                <ImageView                    android:layout_span="2"/>                <TextView                    android:layout_span="8"                    android:text="용인버스터미널"                    android:textSize="23dp" />                <TextView                    android:layout_span="1"                    android:gravity="center"                    android:text="8:42"                    android:textSize="23dp" />                <TextView                    android:layout_span="1"                    android:gravity="center"                    android:text="--:--"                    android:textSize="23dp" />            </TableRow>            <TableRow                android:layout_weight="1">                <ImageView                    android:layout_span="2"/>                <TextView                    android:layout_span="8"                    android:text="용인송담대학교"                    android:textSize="23dp" />                <TextView                    android:layout_span="1"                    android:gravity="center"                    android:text="8:45"                    android:textSize="23dp" />                <TextView                    android:layout_span="1"                    android:gravity="center"                    android:text="--:--"                    android:textSize="23dp" />            </TableRow>        </TableLayout>    </LinearLayout>    <!--레이아웃 비율 3/4--></LinearLayout>